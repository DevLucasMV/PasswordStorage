@model PasswordModel
@{
    ViewData["Title"] = "Editar cadastro";
}

<div class="text-center">

    <h1 class="display-4">Editar senha</h1>

</div>

<form asp-controller="Passwords" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do site/app">
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email cadastrado">
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="text" asp-for="Senha" class="form-control" placeholder="Digite a senha cadastrada">
    </div>

  <button type="submit" class="btn btn-success btn-block">Finalizar edição</button>
    <a class="btn btn-secondary btn-block" asp-controller="Passwords" asp-action="Index" role="button">Voltar</a>
</form>