@model PasswordModel
@{
    ViewData["Title"] = "Cadastrar senha";
}

<div class="text-center">

    <h1 class="display-4"> Cadastrar nova senha</h1>

</div>

<form asp-controller="Passwords" asp-action="Criar" method="post">

  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do site/app">
    @Html.ValidationMessageFor(x => x.Nome)
  </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email cadastrado">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="text" asp-for="Senha" class="form-control" placeholder="Digite a senha cadastrada">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Passwords" asp-action="Index" role="button">Voltar</a>
</form>