@model PasswordModel
@{
    ViewData["Title"] = "Confirmação de apagar o cadastro";
}

<div class="text-center">
    <h3> Realmente deseja apagar o cadastro (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Passwords" asp-action="index"> Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Passwords" asp-route-id="@Model.Id" asp-action="Apagar"> Confirmar exclusão</a>